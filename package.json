{
  "name": "shellops-api",
  "version": "0.5.5",
  "description": "Assists in managing Docker on your server",
  "repository": {
    "url": "https://github.com/shellops/shellops-api"
  },
  "author": "Mohsen Esmaeili <m-esm@hotmail.com",
  "private": false,
  "license": "MIT",
  "bin": {
    "shellops-api": "dist/agent.js"
  },
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "node dist/main.js",
    "dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "commit": "git-cz"
  },
  "dependencies": {
    "@nestjs/common": "^7.5.1",
    "@nestjs/core": "^7.5.1",
    "@nestjs/platform-express": "^7.5.1",
    "@nestjs/platform-ws": "^7.6.5",
    "@nestjs/swagger": "^4.7.11",
    "@nestjs/websockets": "^7.6.5",
    "basic-auth": "^2.0.1",
    "chalk": "^4.1.0",
    "class-transformer": "^0.3.2",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "docker-modem": "^2.1.4",
    "dotenv": "^8.2.0",
    "firebase-admin": "^9.4.2",
    "fs-extra": "^9.0.1",
    "get-port": "^5.1.1",
    "helmet": "^4.3.1",
    "lodash": "^4.17.20",
    "mustache": "^4.1.0",
    "node-fetch": "^2.6.1",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^6.6.3",
    "source-map-support": "^0.5.19",
    "swagger-ui-express": "^4.1.6",
    "systeminformation": "^4.34.7",
    "uuid": "^8.3.2",
    "ws": "^7.4.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.1",
    "@commitlint/config-conventional": "^9.1.1",
    "@nestjs/cli": "^7.5.1",
    "@nestjs/schematics": "^7.1.3",
    "@nestjs/testing": "^7.5.1",
    "@types/basic-auth": "^1.1.3",
    "@types/express": "^4.17.8",
    "@types/fs-extra": "^9.0.6",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.168",
    "@types/mustache": "^4.1.1",
    "@types/node": "^14.14.6",
    "@types/node-fetch": "^2.5.8",
    "@types/ssh2": "^0.5.46",
    "@types/supertest": "^2.0.10",
    "@types/uuid": "^8.3.0",
    "@types/ws": "^7.4.0",
    "@typescript-eslint/eslint-plugin": "^4.6.1",
    "@typescript-eslint/parser": "^4.6.1",
    "eslint": "^7.12.1",
    "eslint-config-prettier": "7.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "git-cz": "^4.6.2",
    "git-precommit-checks": "^3.0.6",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "prettier": "^2.1.2",
    "supertest": "^6.0.0",
    "ts-jest": "^26.4.3",
    "ts-loader": "^8.0.8",
    "ts-node": "^9.0.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.0.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "git-precommit-checks",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
